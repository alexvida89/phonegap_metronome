<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://cordova.apache.org/ns/plugins/1.0"
           id="cordova-plugin-metronomeplugin"
      version="0.0.2">
    <name>MetronomePlugin</name>

    <js-module src="www/metronome.js" name="MetronomePlugin">
        <clobbers target="cordova.plugins.MetronomePlugin" />
    </js-module>

    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="Echo" >
                <param name="android-package" value="org.cordova.plugins.metronome.Echo"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <source-file src="src/android/Echo.java" target-dir="src/org/cordova/plugins/metronome"/>
        <source-file src="src/android/Constants.java" target-dir="src/org/cordova/plugins/metronome"/>
        <source-file src="src/android/Metronome.java" target-dir="src/org/cordova/plugins/metronome"/>
        <source-file src="src/android/SoundMetronome.java" target-dir="src/org/cordova/plugins/metronome"/>
        <source-file src="src/android/MetronomeNote.java" target-dir="src/org/cordova/plugins/metronome"/>
        <source-file src="src/android/ToneGenerator" target-dir="src/org/cordova/plugins/metronome"/>

        <resource-file src="src/android/res/raw/hq_woodblock_high_ogg.ogg" target="res/raw/hq_woodblock_high_ogg.ogg" />
        <resource-file src="src/android/res/raw/hq_woodblock_mid_ogg.ogg" target="res/raw/hq_woodblock_mid_ogg.ogg" />
        <resource-file src="src/android/res/raw/hq_woodblock_low_ogg.ogg" target="res/raw/hq_woodblock_low_ogg.ogg" />
    </platform>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="Echo">
                <param name="ios-package" value="CDVEcho"/>
            </feature>
        </config-file>
        <source-file src="src/ios/CDVEcho.mm" />
        <header-file src="src/ios/HapticMetronome.h" />
        <source-file src="src/ios/HapticMetronome.mm" />
        <header-file src="src/ios/Metronome.h" />
        <source-file src="src/ios/Metronome.m" />
        <resource-file src="src/ios/HQWoodblockHigh.caf" />
        <resource-file src="src/ios/HQWoodblockLow.caf" />
        <resource-file src="src/ios/HQWoodblockMid.caf" />
        <header-file src="src/ios/SoundMetronome.h" />
        <source-file src="src/ios/SoundMetronome.mm" />
    </platform>

    <platform name="browser">
        <js-module src="www/metronome.js" name="MetronomePlugin">
            <runs />
        </js-module>
    </platform>
</plugin>
